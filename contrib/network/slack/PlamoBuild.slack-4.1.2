#!/bin/sh
export NO_STRIP=1
##############################################################
pkgbase='slack'
vers='4.1.2'
url="https://downloads.slack-edge.com/linux_releases/slack-desktop-${vers}-amd64.deb"
arch=`uname -m`
src="slack-${vers}"
verify=""
build=B1
OPT_CONFIG=''
DOCS=''
#patchfiles='slack-desktop.patch'
compress=txz
##############################################################

source /usr/share/plamobuild_functions.sh

# このスクリプトで使う1文字変数の意味
#
# $W : このスクリプトを動かすカレントディレクトリ
# $S : ソースコードのあるディレクトリ(デフォルト: $W/${src})
# $B : ビルド用ディレクトリ(デフォルト: /tmp/build{,32})
# $P : ビルドしたファイルをインストールするディレクトリ（デフォルト: $W/work)

if [ $# -eq 0 ] ; then
  opt_download=0 ; opt_config=1 ; opt_build=1 ; opt_package=1
else
  opt_download=0 ; opt_config=0 ; opt_build=0 ; opt_package=0
  for i in $@ ; do
    case $i in
    download) opt_download=1 ;;
    config) opt_config=1 ;;
    build) opt_build=1 ;;
    package) opt_package=1 ;;
    esac
  done
fi
if [ $opt_download -eq 1 ] ; then
  download_sources
fi

if [ $opt_config -eq 1 ] ; then
  ar xv ${url##*/} data.tar.xz
  if [ $? != 0 ]; then
    echo "failed to convert rpm to tar."
    exit 255
  fi
fi

if [ $opt_build -eq 1 ] ; then
  echo "There is nothing to do."
fi

if [ $opt_package -eq 1 ] ; then
  check_root
  if [ -d $P ]; then
    rm -rf $P
  fi
  mkdir -p $P
  tar xf data.tar.xz -C $P

  rm -vrf $P/etc
  mv -v $P/usr/share/doc/slack-desktop $P/usr/share/doc/$src

  # slack-desktop needs a file for detecting distro or OSes
  mkdir -pv $P/install
  cat <<EOF >> $P/install/initpkg
ln -sf plamo-release /etc/slackware-release
EOF


################################
#      install tweaks
#  strip binaries, delete locale except ja, compress man, 
#  install docs and patches, compress them and  chown root.root
################################
  install_tweak

#############################
#   convert symlink to null file and 
#   add "ln -sf" command into install/doinst.sh
################################
  convert_links

  cd $P
  /sbin/makepkg ../$pkg.$compress <<EOF
y
1
EOF

fi
