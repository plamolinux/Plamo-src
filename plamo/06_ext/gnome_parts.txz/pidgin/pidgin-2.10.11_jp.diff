+void yahoo_roomlist_cancel(PurpleRoomlist *list)
+{
+	GList *l, *k;
+
+	k = l = list->proto_data;
+	list->proto_data = NULL;
+
+	purple_roomlist_set_in_progress(list, FALSE);
+
+	for (; l; l = l->next) {
