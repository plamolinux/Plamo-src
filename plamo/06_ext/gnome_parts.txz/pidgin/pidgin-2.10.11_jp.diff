+		type = PURPLE_LOG_CHAT;
+	else
+		return;
+
+	gtkblist = pidgin_blist_get_default_gtk_blist();
+
+	cursor = gdk_cursor_new(GDK_WATCH);
+	gdk_window_set_cursor(gtkblist->window->window, cursor);
