+static int do_send(struct irc_conn *irc, const char *buf, gsize len)
+{
+	int ret;
+
+	if (irc->gsc) {
+		ret = purple_ssl_write(irc->gsc, buf, len);
+	} else {
+		ret = write(irc->fd, buf, len);
+	}
+
+	return ret;
+}
