+					fi
+
+					found_ncurses_h=yes
+					CFLAGS="$orig_CFLAGS"
+					CPPFLAGS="$orig_CPPFLAGS"
+					AC_MSG_RESULT([yes])
+					break
+				], [
+					CFLAGS="$orig_CFLAGS"
+					CPPFLAGS="$orig_CPPFLAGS"
+					AC_MSG_RESULT([no])
+				])
+			])
