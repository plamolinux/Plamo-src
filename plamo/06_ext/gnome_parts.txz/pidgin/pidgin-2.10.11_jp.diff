+{
+#ifdef USE_VV
+	JabberStream *js = (JabberStream *)
+			purple_account_get_connection(account)->proto_data;
+	JabberBuddy *jb;
+	JabberBuddyResource *jbr;
+	PurpleMediaCaps total = PURPLE_MEDIA_CAPS_NONE;
+	gchar *resource;
+	GList *specific = NULL, *l;
