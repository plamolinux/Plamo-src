+purple_markup_html_to_xhtml(const char *html, char **xhtml_out,
+						  char **plain_out)
+{
+	GString *xhtml = NULL;
+	GString *plain = NULL;
+	GString *url = NULL;
+	GString *cdata = NULL;
+	GList *tags = NULL, *tag;
+	const char *c = html;
+	char quote = '\0';
+
+#define CHECK_QUOTE(ptr) if (*(ptr) == '\'' || *(ptr) == '\"') \
+			quote = *(ptr++); \
+		else \
+			quote = '\0';
