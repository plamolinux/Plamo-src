+			 (!strcmp(packet->name, "error") && xmlns &&
+				!strcmp(xmlns, NS_XMPP_STREAMS))) {
+		/* Most common reason as default: */
+		SET_REASON(PURPLE_CONNECTION_ERROR_NETWORK_ERROR);
+		if(xmlnode_get_child(packet, "bad-format")) {
+			text = _("Bad Format");
