+static char *yahoo_remove_nonbreaking_spaces(char *str)
+{
+	char *p;
+	while ((p = strstr(str, "&nbsp;")) != NULL) {
+		*p = ' '; /* Turn &nbsp;'s into ordinary blanks */
+		p += 1;
+		memmove(p, p + 5, strlen(p + 5));
+		str[strlen(str) - 5] = '\0';
+	}
+	return str;
+}
