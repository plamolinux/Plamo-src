+gboolean
+purple_ipv4_address_is_valid(const char *ip)
+{
+	int c, o1, o2, o3, o4;
+	char end;
+
+	g_return_val_if_fail(ip != NULL, FALSE);
+
+	c = sscanf(ip, "%d.%d.%d.%d%c", &o1, &o2, &o3, &o4, &end);
+	if (c != 4 || o1 < 0 || o1 > 255 || o2 < 0 || o2 > 255 || o3 < 0 || o3 > 255 || o4 < 0 || o4 > 255)
+		return FALSE;
