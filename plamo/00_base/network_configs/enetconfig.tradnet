cleanup_setting() {
  NETWORK=127.0.0.0
  IPADDR=127.0.0.1
  DOMAIN=""
  INITIAL="y"
  # 最初のダイアログ
  firstdialog
  # ホスト名の設定
  set_hostname
  # 接続方法の指定
  select_dhcp_or_fixed
  # dhcpcdが見つからない場合はdialogを出す
  dhcpcd_not_found_dialog
  # 必要ならIPなどの設定をする
  set_tcpip
  # ネームサーバの設定
  set_resolv
  # PCMCIA?
  if_pcmcia
  # ファイルへの書き出し
  set_scheme
  make_config_file
  # 最後のダイアログ
  last_dialog
}

