# End of rc.inet1
EOF
chmod 755 $RC

if [ "$LOOPBACK" = "n" ] ; then
  if [ -f $INET1SCHEME ] ; then
    INET1_SCHEME="`cat $INET1SCHEME`"
    if [ "$INET1_SCHEME" = "DHCP" ] ; then
/bin/cat <<EOF >$INET1SCHEME
dhcp
EOF
    elif [ "$INET1_SCHEME" = "LOOPBACK" ] ; then
/bin/cat <<EOF >$INET1SCHEME
loopback
EOF
    fi
  fi
